<!--pages/login/login.wxml-->

<view class="bgr"></view>
<view class="first">
  <input id = "name" placeholder="用户名" placeholder-class="plas" class="inputs" type="text" bindinput="usernameInput"></input>
</view>
<view class="second">
  <input id = "phonenumber" placeholder="手机号" placeholder-class="plas" class="inputs" type="number" bindinput="phonenumberInput"></input>
</view>
<view class="second">
  <input  id = "psw" placeholder="密码" type="password" placeholder-class="plas" class="inputs" bindinput="passwordInput"></input>
</view>
<view class="second">
  <input id = "pswack" placeholder="确认密码" type="password" placeholder-class="plas" class="inputs" bindinput="ackInput"></input>
</view>

<view id = "btn" class= "register" bindtap="register">
  <text >register</text>
</view>

<view class= "cha" bindtap="signin">
  <text class = "no">已有账号，点我登录</text>
</view>

