/* pages/square/square.wxss */
@import "../bottom/bottom.wxss";
page{
  background-color: #efefef;

}
.box{
  width: 100%;
  padding-top: 30rpx;
  background-color: white;
  border-bottom: 20rpx solid #efefef;
  
}

.scbg{
  background-color: #efefef;
  width: 100%;
  height: 91%;
  top:0rpx;
  left: 0rpx;
  right:0rpx;
  position: fixed;
}
.firstblock{
  width: 100%;
  margin-left: 4%;
  margin-right: 4%;
  height:150rpx;
  display: flex;
  align-content: flex-start;
  align-items: flex-start
}

.touxiang{
  height: 130rpx;
  width: 130rpx;
}
.person{
  width: 75%;
  height: 130rpx;
  margin-left: 32rpx;
  margin-top: 12rpx;
}
.name{
  display: flex;
  align-content: flex-start;
  margin-top: 8rpx;
  font-size: 40rpx;
  flex-direction: row;

}
.tel{
  display: flex;
  align-content: flex-start;
  margin-top: 8rpx;
  
  flex-direction: row;
  
}

.showname{
font-size: 35rpx;
color: #3f51b5;
font-weight: bold;
}
.showtime{
font-size: 25rpx;
color: #5e5d5d;

}
.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #bbbbbb;

}
.content{
  font-size: 29rpx;
  color: #101010;
  word-break: break-all;
}
.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  align-content: flex-start;
  flex-direction: row;

}
.like{
  height: 45rpx;
  width: 45rpx;
  margin-top: 20rpx;
  margin-left: 18rpx;
}
.num{
  height: 52rpx;
  line-height: 52rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  font-size :30rpx;
}